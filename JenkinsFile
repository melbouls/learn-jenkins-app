pipeline {
    agent any

    environment {
        NETLIFY_SITE_ID = '231cceee-ea92-47ba-ba42-617cf20d3d7c'
        NETLIFY_AUTH_TOKEN = credentials('jcp')
    }

    stages {
        stage('Build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    node --version
                    npm --version
                    npm ci
                    npm run build --if-present
                    ls -la build
                '''
            }
        }

        stage('Tests') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    test -f build/index.html
                    npm test || true
                '''
            }
        }

        stage('E2E') {
            agent {
                docker {
                    image 'mcr.microsoft.com/playwright:v1.39.0-jammy'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    npm install serve
                    node_modules/.bin/serve -s build &
                    sleep 10
                    npx playwright test --reporter=html
                '''
            }
            post {
                always {
                    publishHTML([
                        allowMissing: false,
                        alwaysLinkToLastBuild: false,
                        keepAll: false,
                        reportDir: 'playwright-report',
                        reportFiles: 'index.html',
                        reportName: 'Playwright HTML Report'
                    ])
                }
            }
        }

        stage('Deploy') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    npm ci || npm install
                    echo "Deploying to production. Site ID: $NETLIFY_SITE_ID"
                    npx netlify --version
                    npx netlify status --auth=$NETLIFY_AUTH_TOKEN || echo "Impossible de vérifier le statut du site"
                    npx netlify deploy --dir=build --site=$NETLIFY_SITE_ID --auth=$NETLIFY_AUTH_TOKEN --prod --skip-build
                '''
            }
        }
    }

    post {
        always {
            echo "Pipeline terminé."
        }
    }
}
